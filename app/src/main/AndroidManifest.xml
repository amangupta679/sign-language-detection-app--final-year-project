<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andreaziqing.signlanguagedetectionapp">

    <!-- Permissions -->
    <uses-sdk />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SignLanguageDetectionApp">
        <activity
            android:name=".DetectionGames.Practice.MatchGame"
            android:exported="false" />
        <activity
            android:name=".Tabs.GlossarySlider"
            android:exported="false" />
        <activity
            android:name=".DetectionGames.Practice.SignTheLetterGame"
            android:exported="false" />
        <activity
            android:name=".DetectionGames.BetweenGamesActivity"
            android:exported="false" />
        <activity
            android:name=".DetectionGames.Practice.SpellTheWordGame"
            android:exported="false" />
        <activity
            android:name=".DetectionGames.Lessons.SecondLesson"
            android:exported="false" />
        <activity
            android:name=".DetectionGames.Lessons.FirstLesson"
            android:exported="false" />
        <activity
            android:name=".Detector.DetectorActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Detector.CameraActivity"
            android:exported="true" />
        <activity
            android:name=".Authentication.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".OnBoarding.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OnBoarding.OnBoarding"
            android:exported="true" />
        <activity
            android:name=".Navigation.NavigationTabsController"
            android:exported="true" />
    </application>

</manifest>